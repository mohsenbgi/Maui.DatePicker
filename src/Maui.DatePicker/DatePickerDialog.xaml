<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui.DatePicker.DatePickerDialog"
             xmlns:local="clr-namespace:Maui.DatePicker">
    <AbsoluteLayout>
        <Button Text="DatePicker" x:Name="DatePicker" />
        <local:Popup x:Name="popup" CloseByTappingOutside="True">
            <VerticalStackLayout >
                <Grid ColumnDefinitions="*,Auto" Margin="0,0,0,10" Padding="5,0">
                    <Label x:Name="currentMonth" Grid.Column="0" FontSize="25" FontAttributes="Bold" VerticalTextAlignment="Center"/>
                    <HorizontalStackLayout Spacing="15" Grid.Column="1" VerticalOptions="Center">
                        <ImageButton Source="{FontImageSource FontFamily=MaterialIconsOutlined, Glyph=chevron_left, Size=30, Color=Black}"  WidthRequest="25" x:Name="leftMonth"/>
                        <ImageButton Source="{FontImageSource FontFamily=MaterialIconsOutlined, Glyph=chevron_right, Size=30, Color=Black}" WidthRequest="25"  x:Name="rightMonth"/>
                    </HorizontalStackLayout>
                </Grid>
                <local:Scheduler x:Name="scheduler" />
            </VerticalStackLayout>
        </local:Popup>
    </AbsoluteLayout>
</ContentView>
