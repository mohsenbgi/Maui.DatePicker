<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SampleApp.CalendarPage"
             xmlns:dp="clr-namespace:Maui.DatePicker.Dialogs;assembly=Maui.DatePicker">

    <Grid>
        <dp:DatePickerDialog x:Name="dialog" Language="Persian"/>
        <VerticalStackLayout Spacing="10">
            <Button Text="Open calnedar"  x:Name="popupOpener" WidthRequest="200"/>
            <Entry x:Name="datePicker" Text="0000/00/00" WidthRequest="200"/>
            <Button Text="Light" x:Name="LightBtn" WidthRequest="200"/>
            <Button Text="Dark" x:Name="DarkBtn" WidthRequest="200"/>
            <Button Text="FA" x:Name="FaBtn" WidthRequest="200"/>
            <Button Text="EN" x:Name="EnBtn" WidthRequest="200"/>
            <DatePicker WidthRequest="200"/>
        </VerticalStackLayout>
    </Grid>

</ContentPage>
